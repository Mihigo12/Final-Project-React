{
  "name": "todo-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@auth0/auth0-react": "^2.2.4",
    "@fontsource/poppins": "^4.5.0",
    "@reduxjs/toolkit": "^1.7.1",
    "date-fns": "^2.28.0",
    "framer-motion": "^6.0.0",
    "node-sass": "^7.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hot-toast": "^2.2.0",
    "react-icons": "^4.3.1",
    "react-redux": "^7.2.6",
    "react-scripts": "5.0.0",
    "uuid": "^8.3.2"
  },
  "scripts": {
    "postinstall": "cd ./infrastructure && npm install",
    "start": "PORT=3001 react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "format": "prettier --write './**/*.{js,jsx,ts,tsx,css,md,json}'",
    "deploy:prod": "npm run build && cd ./infrastructure && ENV=prod npx cdk deploy",
    "deploy:db:dev": "cd infrastructure/ && docker compose up -d && scripts/create-table.sh",
    "deploy:api:dev": "npm run deploy:db:dev && cd infrastructure/ && ENV=dev npx cdk synth && sam local start-api -t ./cdk.out/TodosStack-dev.template.json --docker-network todos --warm-containers EAGER && cd ../"
  },
  "eslintConfig": {
    "extends": [
      "wesbos"
    ],
    "rules": {
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": true
        }
      ],
      "react/prop-types": 0
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.16.7",
    "@types/aws-lambda": "^8.10.136",
    "@types/node": "^20.11.25",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@types/uuid": "^9.0.8",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "typescript": "4.9.5"
  }
}
